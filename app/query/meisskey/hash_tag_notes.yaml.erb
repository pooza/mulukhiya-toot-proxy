- $lookup:
    from: users
    localField: userId
    foreignField: _id
    as: user
- $addFields:
    user._id_string:
      $toString: $users._id
- $match:
    tags: '<%= params[:tag] %>'
    visibility: '<%= controller_class.visibility_name(:public) %>'
    user._id_string:
      $ne: '<%= test_account._id %>'
<% if params[:local] -%>
    _user.host: null
<% end -%>
<% if params[:limit] -%>
- $limit: <%= params[:limit].to_i %>
<% end -%>
- $sort:
    createdAt: -1
