{
  viewer {
    annictId
    name
    username
    avatarUrl
    works {
      nodes {
        annictId
        title
        seasonYear
        officialSiteUrl
        viewerStatusState
      }
    }
  }
  searchWorks (annictIds: [<%= params[:id] %>]) {
    nodes {
      annictId
      title
      seasonYear
      episodes (orderBy: {field: SORT_NUMBER, direction: DESC}) {
        nodes {
          annictId
          numberText
          title
        }
      }
    }
  }
}
