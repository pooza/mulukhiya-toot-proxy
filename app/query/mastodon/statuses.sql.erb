SELECT
  toots.id
FROM
  statuses AS toots
  INNER JOIN accounts ON toots.account_id = accounts.id
WHERE (toots.reblog_of_id IS null)
  AND (toots.visibility < 3)
  AND (toots.deleted_at IS null)
  AND (toots.local = true)
  <% if params[:rule] %>
    <% if config['/postgres/pgroonga'] %>
      <% params[:rule].keywords.each do |keyword| %>
        AND ((toots.text &@ '<%= keyword %>') OR (toots.spoiler_text &@ '<%= keyword %>'))
      <% end %>
      <% params[:rule].negative_keywords.each do |keyword| %>
        AND (NOT (toots.text &@ '<%= keyword %>'))
        AND ((toots.spoiler_text IS NULL) OR (NOT (toots.spoiler_text &@ '<%= keyword %>')))
      <% end %>
    <% else %>
      <% params[:rule].keywords.each do |keyword| %>
        AND ((toots.text LIKE '%<%= keyword %>%') OR (toots.spoiler_text LIKE '%<%= keyword %>%'))
      <% end %>
      <% params[:rule].negative_keywords.each do |keyword| %>
        AND (toots.text NOT LIKE '%<%= keyword %>%')
        AND ((toots.spoiler_text IS NULL) OR (toots.spoiler_text NOT LIKE '%<%= keyword %>%'))
      <% end %>
    <% end %>
  <% end %>
  AND (accounts.silenced_at IS null)
  AND (accounts.suspended_at IS null)
  AND (accounts.id = '<%= params[:id] %>')
ORDER BY
  toots.id DESC
LIMIT <%= params[:limit] %> OFFSET <%= params[:page] ? ((params[:page] - 1) * params[:limit]) : 0 %>
