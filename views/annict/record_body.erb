<% if params.dig(:record, :record, :comment).present? -%>

<%= params.dig(:record, :record, :comment).ellipsize(config['/annict/chars']) %>
<% end -%>
<%= Mulukhiya::AnnictService.create_record_uri(params.dig(:record, :work, :annictId), params.dig(:record, :episode, :annictId)) %>
<%=
  [
    params.dig(:record, :work, :title),
    Mulukhiya::AnnictService.create_episode_number_text(params.dig(:record, :episode, :number_text)),
    params.dig(:record, :episode, :title),
  ].select(&:present?).map(&:to_hashtag).join(' ')
%>
